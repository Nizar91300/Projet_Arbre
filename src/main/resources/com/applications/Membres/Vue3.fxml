<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #50dfff, #f30606);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.applications.Membres.MembreController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1080.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnVoter" text="Voter pour un arbre" />
                        <Button fx:id="btnPlanifierVisite" text="Planifier une visite" />
                    </children>
                </HBox>
                <TableView fx:id="tableArbres" prefHeight="600.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colNom" prefWidth="200.0" text="Nom Commun" />
                        <TableColumn fx:id="colGenre" prefWidth="150.0" text="Genre" />
                        <TableColumn fx:id="colEspece" prefWidth="150.0" text="Espèce" />
                        <TableColumn fx:id="colCircon" prefWidth="100.0" text="Circonférence" />
                        <TableColumn fx:id="colHauteur" prefWidth="100.0" text="Hauteur" />
                        <TableColumn fx:id="colRem" prefWidth="100.0" text="Remarquable" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</StackPane>
